{
  "name": "@rccpr/auth-gate",
  "version": "0.3.2",
  "license": "MIT",
  "private": false,
  "description": "A library for conditional rendering components based on authentication/authorization",
  "author": "Garox",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rccpr/auth-gate.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "preinstall": "npx only-allow bun",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "typecheck": "bun x tsc --noEmit",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@commitlint/cli": "19.2.2",
    "@commitlint/config-conventional": "19.2.2",
    "@types/bun": "latest",
    "husky": "9.1.7",
    "tsdown": "0.16.4",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "@types/react": "^19",
    "react": "^19",
    "@stackframe/stack": "^2.8.51"
  },
  "peerDependenciesMeta": {
    "@stackframe/stack": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "trustedDependencies": [
    "core-js"
  ]
}